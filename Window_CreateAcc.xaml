<Window x:Class="Home13.Window_CreateAcc"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Home13"
        mc:Ignorable="d"
        Title="Создание счета" Height="192" Width="369">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="50,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="{Binding Total, UpdateSourceTrigger=PropertyChanged}"/>
        <RadioButton Content="недепозитный" HorizontalAlignment="Left" Margin="220,41,0,0" VerticalAlignment="Top"/>
        <RadioButton Content="депозитный" HorizontalAlignment="Left" Margin="220,70,0,0" VerticalAlignment="Top"/>
        <Button Content="Создать" HorizontalAlignment="Left" Margin="145,115,0,0" VerticalAlignment="Top" Width="75" Command="{Binding CreateCommand}" Click="Button_Click_1"/>
        <Label Content="СУММА" HorizontalAlignment="Left" Margin="50,39,0,0" VerticalAlignment="Top" Width="55"/>

    </Grid>
</Window>
